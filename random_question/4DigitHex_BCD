;Q) Write an ALP to convert a 4 digit hexadecimal number to BCD
;Need to check. Probably isn't working
	AREA RESET,DATA,READONLY
	EXPORT __Vectors
	
__Vectors
	DCD 0X10001000
	DCD Reset_Handler
	
	ALIGN
	AREA mycode,CODE,READONLY
	ENTRY
	EXPORT Reset_Handler
	
Reset_Handler
	LDR R0,=N
	LDR R1,[R0]
UP2
	CMP R1,#0
	BEQ EXIT2
	MOV R3,#0
UP1             ;Divide by 0xA
	CMP R1,#0XA
	BLO EXIT1
	SUB R1,#0XA
	ADD R3,#1
	B UP1
EXIT1        ;To pack the R1 to R0
	LSL R1,R2
	ADD R0,R1
	ADD R2,#4
	MOV R1,R3
	B UP2
EXIT2
	LDR R4,=BCD
	STR R0,[R4]
	
STOP
	B STOP
	
N DCD 0XF

	AREA mydata, DATA, READWRITE
BCD DCD 0

	END
	
